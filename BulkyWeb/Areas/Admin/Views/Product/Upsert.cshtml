@model ProductVM

<div class="card shadow border-0 p-0 mb-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id==0?"Create Category":"Update Category")</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data" multiple>
            <input  asp-for="Product.Id" hidden/>
          @*   <input asp-for="Product.ImageUrl" hidden /> *@
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @* asp-validation-summary hiển thị thông báo lỗi
                        All: Hiển thị tất cả lỗi requied trong Category lên trên table
                        ModelOnly:Chỉ hiển thị ModelState.AddModelError( và phải ko xác định key ) không hiển thị thuộc tính lên table
                        None:ko hiển thị bất kỳ thông báo nào
                        *@
                        @*  <div class="form-control" asp-validation-summary="All"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Title" class="form-control border-0 shadow" />
                            <label asp-for="Product.Title" class="ms-2"></label>

                            @* asp-validation-for kiểm tra lỗi đã được định nghĩa trong Category (required,range,length)*@
                            <span class="text-danger" asp-validation-for="Product.Title"></span>
                        </div>
                        @* asp-for có thế hiện tên thuộc tính và nhận giá trị thay đổi khi gửi,  trường input type tự nhận biết asp-for là type gì*@
                        <div class="py-2 col-12">
                            <label asp-for="Product.Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                            <label asp-for="Product.ISBN" class="ms-2"></label>

                            <span class="text-danger" asp-validation-for="Product.ISBN"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Author" class="form-control border-0 shadow" />
                            <label asp-for="Product.Author" class="ms-2"></label>

                            <span class="text-danger" asp-validation-for="Product.Author"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                            <label asp-for="Product.ListPrice" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="Product.ListPrice"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="Product.Price"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price50" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price50" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="Product.Price50"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price100" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price100" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="Product.Price100"></span>
                        </div>
                        @*             <div class="form-floating py-2 col-12">
                        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                        </div> *@

                        @* cách dùng viewData *@
                        @*                 <div class="form-floating py-2 col-12">
                        <select asp-for="Product.CategoryId" asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
                        </div> *@

                        @* cách dùng viewModel là sự kết hợp class *@
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            @* <label asp-for="Product.ImageUrl" class="ms-2"></label> *@
                        </div>


                        <div class="row mt-2">

                            <div class="col-6 col-md-3">
                                @{
                                    if (Model.Product.Id == 0)
                                    {
                                        <button type="submit" class="btn btn-primary form-control">Create</button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary form-control">Update</button>
                                    }
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a class="btn btn-outline-primary border form-control" asp-area="Admin" asp-controller="Product" asp-action="Index">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                 @*    @{
                        if(!string.IsNullOrEmpty(Model.Product.ImageUrl))
                        {
                            <img src="@Model.Product.ImageUrl" class="w-100" style="border-radius:5px;border:1px solid #bbb9b9"/>
                        }
                    } *@
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image lists table visualblocks wordcount linkchecker',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | numlist bullist indent outdent ',
        });
    </script>
}



