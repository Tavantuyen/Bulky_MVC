@model Company

<div class="card shadow border-0 p-0 mb-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id == 0 ? "Create Company" : "Update Company")</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data" multiple>
            <input  asp-for="Id" hidden/>
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        @* asp-validation-summary hiển thị thông báo lỗi
                        All: Hiển thị tất cả lỗi requied trong Category lên trên table
                        ModelOnly:Chỉ hiển thị ModelState.AddModelError( và phải ko xác định key ) không hiển thị thuộc tính lên table
                        None:ko hiển thị bất kỳ thông báo nào
                        *@
                        @*  <div class="form-control" asp-validation-summary="All"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                            @* asp-validation-for kiểm tra lỗi đã được định nghĩa trong Category (required,range,length)*@
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PhoneNumber" class="form-control border-0 shadow" />
                            <label asp-for="PhoneNumber" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="StreetAdress" class="form-control border-0 shadow" />
                            <label asp-for="StreetAdress" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="StreetAdress"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="City" class="form-control border-0 shadow" />
                            <label asp-for="City" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="City"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="State" class="form-control border-0 shadow" />
                            <label asp-for="State" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="State"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PotalCode" class="form-control border-0 shadow" />
                            <label asp-for="PotalCode" class="ms-2"></label>
                            <span class="text-danger" asp-validation-for="PotalCode"></span>
                        </div>
          
      
                        <div class="row mt-2">

                            <div class="col-6 col-md-3">
                                @{
                                    if (Model.Id == 0)
                                    {
                                        <button type="submit" class="btn btn-primary form-control">Create</button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary form-control">Update</button>
                                    }
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a class="btn btn-outline-primary border form-control" asp-area="Admin" asp-controller="Company" asp-action="Index">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>





